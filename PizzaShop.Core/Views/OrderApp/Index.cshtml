@model PizzaShop.Repository.ModelView.OrderAppKOTViewModel

@{
    Layout = "~/Views/Shared/_OrderApp.cshtml";
}

<div class="p-1 mx-3 mx-sm-5 my-2  d-flex justify-content-between">
    <h3 class="text-blue ff-bold">KOT</h3>
</div>


<div class="d-flex  bg-white border rounded overflow-auto p-3 mx-3 mx-sm-5 mb-4">
    @if (Model.categories != null && Model.categories.Any())
    {
        <span class="mx-2 KOTLink active" data-category-name="All">All</span>
        @foreach (var c in Model.categories)
        {
            <span class="mx-2 KOTLink" style="cursor: pointer;"
                data-category-name="@(c.Categoryname.First().ToString().ToUpper() + c.Categoryname.Substring(1))"
                data-category-id="@c.Categoryid">
                @(c.Categoryname.First().ToString().ToUpper() + c.Categoryname.Substring(1))
            </span>
        }
    }
</div>

<div class="bg-white border rounded  p-3 mx-3 mx-sm-5 my-4 ">
    <div class="d-flex justify-content-between align-items-center flex-column flex-md-row gap-2"> 
        <div>
            <h3 class="categoryName m-auto text-blue">All</h3>
        </div>

        <div class="d-flex ">
            <button class="d-flex justify-content-center align-items-center btn prgressLink active text-primary border border-primary mx-1"data-status="1">
                <i class="bi bi-bag-x-fill mx-0 mx-md-1"></i>
                <span class="d-none d-md-block"> In Progress</span>
            </button>
            <button class="d-flex justify-content-center align-items-center btn prgressLink border text-primary border-primary mx-1" data-status="2">
                
                <i class="bi bi-bag-check-fill mx-0 mx-md-1"></i>
                <span class="d-none d-md-block"> Ready</span>
            </button>
            <button class="btn text-primary border border-primary mx-1" id="LeftScroll"><i class="bi bi-chevron-left"></i></button>
            <button class="btn text-primary border border-primary mx-1" id="RightScroll"><i class="bi bi-chevron-right"></i></button>
        </div>
    </div>


    <div id="CardKotContainer" class="d-flex gap-2 overflow-auto py-3 ">
    </div>

</div>


<!-- Modal -->
<div class="modal fade" id="KOTModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Content loaded dynamically -->
        </div>
    </div>
</div>


@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Kot_script.js"></script>
}