<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/images/transperent-pizza.png">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <title>Pizza shop</title>
</head>


<body class="bg-light w-100">

    <div class="main w-100 min-vh-100  h-100">
        <Aside class="mainClassOfsidebar sideBar">
            <div class="logoheader">
                <h1 class="h1class"> <img src="~/images/logos/pizzashop_logo.png" alt="" height="40px">PIZZASHOP
                </h1>

            </div>
            @{
                var Users = false;
                var RoleAndPermission = false;
                var Menu = false;
                var TableAndSection = false;
                var TaxAndFee = false;
                var Order = false;
                var Customer = false;
                if (ViewBag.permission != null)
                {
                    foreach (var r in ViewBag.permission)
                    {
                        if (r.PermissionId == 1 && r.Canview == true)
                        {
                            Users = true;
                        }
                        if (r.PermissionId == 2 && r.Canview == true)
                        {
                            RoleAndPermission = true;
                        }
                        if (r.PermissionId == 3 && r.Canview == true)
                        {
                            Menu = true;
                        }
                        if (r.PermissionId == 4 && r.Canview == true)
                        {
                            TableAndSection = true;
                        }
                        if (r.PermissionId == 5 && r.Canview == true)
                        {
                            TaxAndFee = true;
                        }
                        if (r.PermissionId == 6 && r.Canview == true)
                        {
                            Order = true;
                        }
                        if (r.PermissionId == 7 && r.Canview == true)
                        {
                            Customer = true;
                        }
                    }

                }

            }
            <ul id="sidebarMenu">
                @if(ViewBag.role != "Chef")
                {
                    <li class="ActiveAside px-2 py-1" data-value="UserDashboard">    
                        <a asp-controller="Users" asp-action="RoleWiseBack" class="p-1 activeA">
                            <i class="bi bi-grid mx-2"></i>Dashboard
                        </a>
                    </li>
                }
                
                @if (Users)
                {
                    
                    <li class="ActiveAside" data-value="UserTable" ><a asp-controller="UserTable" asp-action="Index"><i class="bi bi-people mx-2"></i>Users</a></li>
                }
                @if (RoleAndPermission)
                {
                    <li class="ActiveAside" data-value="Role"> <a asp-controller="Role" asp-action="Role"><i class="bi bi-person-check mx-2"></i>Role &
                            Permition</a></li>
                }
                @if (Menu)
                {
                    <li class="ActiveAside" data-value="Menu"><a asp-controller="Menu" asp-action="Index"><i class="bi bi-cake mx-2"></i>Menu</a></li>
                }
                @if (TableAndSection)
                {
                    <li class="ActiveAside" data-value="section"><a asp-controller="section" asp-action="Index"><i class="bi bi-database mx-2"></i>Table &
                            Section</a></li>
                }
                @if (TaxAndFee)
                {
                    <li class="ActiveAside" data-value="Tax"><a asp-controller="Tax" asp-action="Index"><i class="bi bi-cash-coin mx-2"></i>Taxes & Fees</a></li>
                }
                @if (Order)
                {
                    <li class="ActiveAside" data-value="Order"><a asp-controller="Order" asp-action="Index"><i class="bi bi-list-ol mx-2"></i>Orders</a></li>
                }
                @if (Customer)
                {
                    <li class="ActiveAside" data-value="Customer"><a asp-controller="Customer" asp-action="Index"><i
                                class="bi bi-person-square mx-2"></i>Customers</a></li>
                }
                    <li class="ActiveAside" data-value="Events"><a asp-controller="Events" asp-action="Index"><i
                                class="bi bi-person-square mx-2"></i>Events</a></li>

            </ul>

        </Aside>
        <div class="w-100">
            <nav class="">
                <nav class="navbar d-flex navbar-expand-lg bg-body-tertiary ">
                    <div class="w-100 d-flex ">
                        <button class="asideBar navbar-brand border rounded-circle" type="button"
                            data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions"
                            aria-controls="offcanvasWithBothOptions">
                            <img src="~/images/logos/pizzashop_logo.png" alt="" height="25px">

                        </button>

                        <div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1"
                            id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
                            <div class="offcanvas-header">
                                <h1 class="h1class"> <img src="~/images/logos/pizzashop_logo.png" alt=""
                                        height="40px">PIZZASHOP
                                </h1>
                                <button type="button" class="btn-close mb-1" data-bs-dismiss="offcanvas"
                                    aria-label="Close"></button>
                            </div>
                            <div class="offcanvas-body">
                                <Aside class="sideBar">
                                    <div class="logoheader">


                                    </div>
                                    <ul>
                                        @if(ViewBag.role != "Chef")
                                        {
                                            <li class="ActiveAside p-0 me-3" data-value="UserDashboard">
                                                <a asp-controller="Users" asp-action="RoleWiseBack"><i
                                                        class="bi bi-grid mx-2"></i> Dashboard</a>
                                            </li>
                                        }
                                        @if (Users)
                                        {
                                            <li class="ActiveAside p-0 me-3" data-value="UserTable"><a asp-controller="UserTable" asp-action="Index"><i
                                                        class="bi bi-people mx-2"></i>Users</a></li>
                                        }
                                        @if (RoleAndPermission)
                                        {
                                            <li class="ActiveAside p-0 me-3" data-value="Role"> <a asp-controller="Role" asp-action="Role"><i
                                                        class="bi bi-person-check mx-2"></i>Role &
                                                    Permition</a></li>
                                        }
                                        @if (Menu)
                                        {
                                            <li class="ActiveAside p-0 me-3" data-value="Menu"><a asp-controller="Menu" asp-action="Index"><i
                                                        class="bi bi-cake mx-2"></i>Menu</a></li>
                                        }
                                        @if (TableAndSection)
                                        {
                                            <li class="ActiveAside p-0 me-3" data-value="section"><a asp-controller="section" asp-action="Index"><i
                                                        class="bi bi-database mx-2"></i>Table & Section</a></li>
                                        }
                                        @if (TaxAndFee)
                                        {
                                            <li class="ActiveAside p-0 me-3" data-value="Tax"><a asp-controller="Tax" asp-action="Index"><i
                                                        class="bi bi-cash-coin mx-2"></i>Taxes & Fees</a></li>
                                        }
                                        @if (Order)
                                        {
                                            <li class="ActiveAside p-0 me-3" data-value="Order"><a asp-controller="Order" asp-action="Index"><i
                                                        class="bi bi-list-ol mx-2"></i>Orders</a></li>
                                        }
                                        @if (Customer)
                                        {
                                            <li class="ActiveAside p-0 me-3" data-value="Customer"><a asp-controller="Customer" asp-action="Index"><i
                                                        class="bi bi-person-square mx-2"></i>Customers</a></li>
                                        }
                                    </ul>

                                </Aside>
                            </div>
                        </div>
                        <div class="container-fluid d-flex justify-content-end">
                            @if (ViewBag.role == "AccountManager")
                            {
                                <a asp-controller="OrderApp" asp-action="Tables" class="OrderAppIcon"><i class="bi bi-phone"></i></a>
                            }else if(ViewBag.role == "Chef")
                            {
                                <a asp-controller="OrderApp" asp-action="Index" class="OrderAppIcon"><i class="bi bi-phone"></i></a>
                            }
                            
                            <div class="custom-user-dropdown">
                                <button
                                    class="text-decoration-none bg-transparent rounded-circle border-light user-dropdown-btn"
                                    type="button">
                                    @if (ViewBag.ImageUrl != null && ViewBag.ImageUrl != "default")
                                    {
                                        <img src="@ViewBag.ImageUrl" alt="User Image" class="imageCenter rounded-circle" height="40"
                                            width="40" />
                                    }
                                    else
                                    {
                                        <img src="~/images/Default_pfp.svg.png" alt="User Image" class="imageCenter rounded-circle"
                                            height="40" width="40" />
                                    }
                                </button>
                                <ul class="user-dropdown-menu" style="display: none;">
                                    <li
                                        class="dropdown-item d-flex justify-content-center align-items-center gap-3 mb-1">
                                        @if (ViewBag.ImageUrl != null && ViewBag.ImageUrl != "default")
                                        {
                                            <img src="@ViewBag.ImageUrl" alt="User Image" class="imageCenter rounded-circle" height="30"
                                                width="30" />
                                        }
                                        else
                                        {
                                            <img src="~/images/search-icon.svg" alt="User Image" class="imageCenter rounded-circle"
                                                height="30" width="30" />
                                        }
                                        @ViewBag.Username
                                    </li>
                                    <li><a asp-controller="Users" asp-action="UserProfile"
                                            class="dropdown-item border-bottom">My Profile</a></li>
                                    <li><a class="dropdown-item border-bottom" asp-action="ChangePassword"
                                            asp-controller="Users">Change Password</a></li>
                                    <li style="cursor: pointer;"><a class="dropdown-item border-bottom" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal2" style="cursor: pointer;">Logout</a></li>
                                </ul>
                            </div>



                            <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Logout</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div
                                            class="modal-body d-flex flex-column justify-content-center align-items-center ">
                                            <img src="~/images/toppng.com-warning-icon-2400x2400.png" height="40px"
                                                width="40px">
                                            <div class=""> Are you sure you want to logout?</div>
                                        </div>
                                        <div class="modal-footer d-flex-col justify-content-center ">
                                            <button type="button" class="btn btn-primary"><a asp-action="Logout"
                                                    asp-controller="Home"
                                                    class="text-decoration-none text-white border-none">Yes</a></button>
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">No</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </nav>

            </nav>




            <main class="w-100">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site_script.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
   <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @* <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script> *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
