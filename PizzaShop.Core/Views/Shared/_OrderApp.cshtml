<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/images/transperent-pizza.png">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <title>Pizza shop</title>
</head>


<body class="bg-light w-100">

    <div class="main w-100 min-vh-100  h-100">
        <div class="w-100">
            <nav class="">
                <nav class="navbar d-flex navbar-expand-lg bg-body-tertiary ">
                    <div class="w-100 d-flex justify-content-between align-items-center mx-3">
                        <div class=" d-flex justify-content-center  align-items-center">
                            <img src="~/images/logos/pizzashop_logo.png" class="bg-white border rounded" alt=""
                                height="40px">
                            <h4 class="text-white  my-auto mx-2 d-none d-md-flex">PIZZASHOP</h4>
                        </div>
                        <div class="d-flex justify-content-center align-items-center gap-1">
                            <a class="orderAppLink btn border border-2 rounded-pill text-white d-flex gap-2"
                                style="font-size: 15px;" asp-action="Index" asp-controller="OrderApp"><i
                                    class="bi bi-bucket-fill"></i> <span class="d-none d-md-flex">KOT</span></a>
                            @if( ViewBag.role=="AccountManager")
                            {
                                 <a class="orderAppLink btn border border-2 rounded-pill text-white d-flex gap-2"
                                style="font-size: 15px;" asp-action="WaitingList" asp-controller="OrderApp"><i
                                    class="bi bi-hourglass-bottom"></i> <span class="d-none d-md-flex">Waiting
                                    List</span></a>
                                <a class="orderAppLink btn border border-2 rounded-pill text-white d-flex gap-2"
                                style="font-size: 15px; " asp-action="Tables" asp-controller="OrderApp"><i
                                    class="bi bi-database "></i> <span class="d-none d-md-flex">Tables</span></a>
                                <a class="orderAppLink btn border border-2 rounded-pill text-white d-flex gap-2"
                                style="font-size: 15px;" asp-action="Menu" asp-controller="OrderApp"><i
                                    class="bi bi-cake "></i> <span class="d-none d-md-flex">Menu</span></a>
                            }
                           
                            <div class="custom-user-dropdown">
                                <button
                                    class="text-decoration-none bg-transparent rounded-circle border-light user-dropdown-btn"
                                    type="button">
                                    @if (ViewBag.ImageUrl != null && ViewBag.ImageUrl != "default")
                                    {
                                        <img src="@ViewBag.ImageUrl" alt="User Image" class="rounded-circle" height="40"
                                            width="40" />
                                    }
                                    else
                                    {
                                        <img src="~/images/Default_pfp.svg.png" alt="User Image" class="rounded-circle"
                                            height="40" width="40" />
                                    }
                                </button>
                                <ul class="user-dropdown-menu" style="display: none;">
                                    <li
                                        class="dropdown-item d-flex justify-content-center align-items-center gap-3 mb-1">
                                        @if (ViewBag.ImageUrl != null && ViewBag.ImageUrl != "default")
                                        {
                                            <img src="@ViewBag.ImageUrl" alt="User Image" class="rounded-circle" height="30"
                                                width="30" />
                                        }
                                        else
                                        {
                                            <img src="~/images/search-icon.svg" alt="User Image" class="rounded-circle"
                                                height="30" width="30" />
                                        }
                                        @ViewBag.Username
                                    </li>
                                    <li><a asp-controller="Users" asp-action="UserProfile"
                                            class="dropdown-item border-bottom">My Profile</a></li>
                                    <li><a class="dropdown-item border-bottom" asp-action="ChangePassword"
                                            asp-controller="Users">Change Password</a></li>
                                    <li style="cursor: pointer;"><a class="dropdown-item border-bottom" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal2">Logout</a></li>
                                </ul>
                            </div>





                        </div>
                    </div>

                </nav>

            </nav>




            <main class="w-100">
                @RenderBody()
            </main>

        </div>
    </div>



    <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Logout</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column justify-content-center align-items-center ">
                    <img src="~/images/toppng.com-warning-icon-2400x2400.png" height="40px" width="40px">
                    <div class=""> Are you sure you want to logout?</div>
                </div>
                <div class="modal-footer d-flex-col justify-content-center ">
                    <button type="button" class="btn btn-primary"><a asp-action="Logout" asp-controller="Home"
                            class="text-decoration-none text-white border-none">Yes</a></button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script> *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/orderAppLayout_script.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
